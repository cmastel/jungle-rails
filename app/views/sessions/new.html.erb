<header class="page-header">
  <h1>Login</h1>
</header>
<% if @error %>
  <div class="alert alert-danger" role="alert">
    Incorrect login information. Please try again.
  </div>
<% end %>

<%= form_tag '/login' do %>

  Email: <%= text_field_tag :email %>
  Password: <%= password_field_tag :password %>
  <%= submit_tag "Submit" %>

<% end %>